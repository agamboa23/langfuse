{
  "compilerOptions": {
    "composite": true,
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strictNullChecks": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "../shared/dist",
    "../shared/node_modules"
  ],
  "include": ["**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.mjs", ".eslintrc.json"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
